{
  "timezone": "Japan",
  "extends": [
    "config:base",
    "monorepo:angular",
    "monorepo:angular1",
    "monorepo:react"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "devDependencies": {
    "automerge": true
  },
  "pinDigests": false,
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ]
    },
    {
      "depTypeList": [
        "peerDependencies"
      ],
      "groupName": "peerDependencies"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": "before 3am on Monday"
}
