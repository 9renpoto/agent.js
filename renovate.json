{
  "timezone": "Japan",
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "devDependencies": {
    "automerge": true
  },
  "pinDigests": false,
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ]
    },
    {
      "depTypeList": [
        "dependencies"
      ],
      "groupName": "dependencies"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**"
  ],
  "schedule": "before 3am on Monday"
}
